@model LoginDetailsModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col col-lg-4 col-md-6 col-sm-12 login-form">
            
            @* head *@
            <div class="mt-4 text-center">
                <h1> LOGIN </h1>
            </div>

            @* login form *@
            @using(Html.BeginForm("Login", "Account", FormMethod.Post))
            {
                @* username *@
                <div>
                    @Html.TextBoxFor(model=>model.Username, new{@style="width: 100%;", @class="mt-4 login-form-input", placeholder="Username"})
                    @Html.ValidationMessageFor(model => model.Username, null, new { @class = "mx-2 login-form-validation-msg" }, null)
                </div>

                @* password *@
                <div>
                    @Html.TextBoxFor(model=>model.Password, new{@style="width: 100%;", @class="mt-4 login-form-input", placeholder="Password"})
                    @Html.ValidationMessageFor(model => model.Password, null, new { @class = "mx-2 login-form-validation-msg" }, null)
                </div>

                @* remember me *@
                <div class="mt-2">
                    <input asp-for="RememberMe" />
                    <label asp-for="RememberMe">Remember me</label>
                </div>

                @* submit *@
                <button type="submit" class="mt-3 login-form-submit">Sign In</button>
            }

            @* action buttons *@
            <div class="mt-1 mb-4">
                Or new user? <a href="@Url.Action("Registration", "Account")">Sign Up</a>.
            </div>

        </div>
    </div>
</div>



